---
import { cn } from '@/lib/utils';

interface Props {
  title: string;
  description?: string;
  align?: 'left' | 'center';
  class?: string;
}

const { title, description, align = 'left', class: className } = Astro.props;
---

<section class={cn("pt-20 pb-12 lg:pt-32 lg:pb-16", className)}>
  <div class="container">
    <div class={cn(
      "max-w-2xl",
      align === 'center' && "mx-auto text-center"
    )}>
      <h1 class="text-4xl font-display font-bold tracking-tight sm:text-5xl mb-6">
        {title}
      </h1>
      {description && (
        <p class="text-xl text-muted-foreground text-balance">
          {description}
        </p>
      )}
      <slot />
    </div>
  </div>
</section>
