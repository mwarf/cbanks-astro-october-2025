---
import { Image } from "astro:assets";
import { Badge } from "@/components/ui/badge";
import { Separator } from "@/components/ui/separator";

interface Props {
  posts: any[];
}

const { posts } = Astro.props;

// Function to calculate reading time
const calculateReadingTime = (content: string) => {
  if (!content) return "1 Min Read";
  const wordsPerMinute = 200;
  const words = content.trim().split(/\s+/).length;
  const minutes = Math.ceil(words / wordsPerMinute);
  return `${minutes} Min Read`;
};

const featuredPost = posts[0];
const regularPosts = posts.slice(1);
---

<section class="container mx-auto max-w-6xl px-4 py-8">
  {/* Featured Post */}
  {featuredPost && (
    <div class="mb-12 grid gap-8 md:grid-cols-2 lg:gap-12 items-center">
      <a
        href={`/blog/${featuredPost.data.slug || featuredPost.id}/`}
        class="group block overflow-hidden rounded-2xl"
      >
        <Image
          src={featuredPost.data.image}
          alt={featuredPost.data.title}
          width={800}
          height={450}
          class="aspect-video w-full transform object-cover transition-transform duration-300 group-hover:scale-105"
        />
      </a>
      <div class="flex flex-col justify-center space-y-4">
        <Badge variant="secondary" className="w-fit">
          Latest Article
        </Badge>
        <a href={`/blog/${featuredPost.data.slug || featuredPost.id}/`}>
           <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold leading-tight tracking-tight mb-4 hover:text-primary transition-colors">
            {featuredPost.data.title}
          </h1>
        </a>
        <p class="text-muted-foreground text-lg line-clamp-3 mb-6">
          {featuredPost.data.description}
        </p>
        <div class="flex items-center gap-4 pt-4">
          <div class="flex items-center gap-3">
            <div class="h-10 w-10 overflow-hidden rounded-full border border-input">
              {featuredPost.data.authorImage ? (
                <Image 
                  src={featuredPost.data.authorImage} 
                  alt={featuredPost.data.authorName || ""} 
                  width={40} 
                  height={40} 
                  class="h-full w-full object-cover"
                />
              ) : (
                <div class="bg-muted flex h-full w-full items-center justify-center text-sm font-medium">
                  {featuredPost.data.authorName?.charAt(0) || "A"}
                </div>
              )}
            </div>
            <div class="flex flex-col">
              <span class="text-sm font-semibold">{featuredPost.data.authorName}</span>
              <span class="text-xs text-muted-foreground">
                {calculateReadingTime(featuredPost.body)}
              </span>
            </div>
          </div>
        </div>
      </div>
    </div>
  )}

  <Separator className="my-12" />

  {/* Regular Posts Grid */}
  <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
    {regularPosts.map((post) => (
      <a
        class="group flex h-full flex-col overflow-hidden rounded-xl border bg-card text-card-foreground transition-all hover:shadow-md"
        href={`/blog/${post.data.slug || post.id}/`}
      >
        <div class="overflow-hidden">
          <Image
            src={post.data.image}
            alt={post.data.title}
            width={400}
            height={225}
            class="aspect-video w-full object-cover transition-transform duration-300 group-hover:scale-105"
          />
        </div>
        <div class="flex flex-1 flex-col p-6">
          <h2 class="mb-3 text-xl font-bold leading-snug group-hover:text-primary transition-colors">
            {post.data.title}
          </h2>
          <p class="mb-6 line-clamp-2 text-sm text-muted-foreground flex-1">
            {post.data.description}
          </p>
          
          <div class="mt-auto flex items-center justify-between gap-4">
            <div class="flex items-center gap-2">
              <div class="h-6 w-6 overflow-hidden rounded-full border border-input">
                {post.data.authorImage ? (
                  <Image 
                    src={post.data.authorImage} 
                    alt={post.data.authorName || ""} 
                    width={24} 
                    height={24} 
                    class="h-full w-full object-cover"
                  />
                ) : (
                  <div class="bg-muted flex h-full w-full items-center justify-center text-[10px] font-medium">
                    {post.data.authorName?.charAt(0) || "A"}
                  </div>
                )}
              </div>
              <span class="text-xs font-medium text-muted-foreground">
                {post.data.authorName}
              </span>
            </div>
            <Badge variant="secondary" className="text-xs font-normal">
              {calculateReadingTime(post.body)}
            </Badge>
          </div>
        </div>
      </a>
    ))}
  </div>
</section>
