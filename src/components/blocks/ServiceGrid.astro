---
import { DashedLine } from "@/components/dashed-line";
import { cn } from "@/lib/utils";

interface GridItem {
  title: string;
  description: string;
  icon?: any;
  image?: string;
}

interface Props {
  title?: string;
  description?: string;
  items: GridItem[];
  columns?: 2 | 3 | 4;
  variant?: "default" | "bordered" | "minimal";
  className?: string;
}

const {
  title,
  description,
  items,
  columns = 3,
  variant = "default",
  className,
} = Astro.props;

const gridCols = {
  2: "md:grid-cols-2",
  3: "md:grid-cols-2 lg:grid-cols-3",
  4: "md:grid-cols-2 lg:grid-cols-4",
};
---

<section class={cn("overflow-hidden py-28 lg:py-32", className)}>
  <div class="container">
    {title && (
      <h2 class="text-center text-3xl tracking-tight text-balance sm:text-4xl md:text-5xl lg:text-6xl">
        {title}
      </h2>
    )}
    {description && (
      <p class="mx-auto mt-4 max-w-2xl text-center text-lg text-muted-foreground">
        {description}
      </p>
    )}

    <div class="mt-8 md:mt-12 lg:mt-20">
      {variant !== "minimal" && (
        <DashedLine
          orientation="horizontal"
          className="scale-x-105"
        />
      )}

      <div class={cn("grid gap-8 py-8", gridCols[columns])}>
        {items.map((item, i) => (
          <div
            class={cn(
              "relative flex flex-col gap-4 p-4",
              variant === "bordered" && "rounded-xl border bg-card",
            )}
          >
            {item.icon && (
              <div class="mb-2 flex h-12 w-12 items-center justify-center rounded-xl bg-muted text-primary">
                <item.icon className="h-6 w-6" />
              </div>
            )}
            
            {item.image && (
              <div class="mb-4 aspect-video overflow-hidden rounded-xl">
                <img
                  src={item.image}
                  alt={item.title}
                  class="h-full w-full object-cover"
                  loading="lazy"
                />
              </div>
            )}

            <h3 class="text-xl font-semibold">{item.title}</h3>
            <p class="text-muted-foreground">{item.description}</p>

            {/* Vertical divider between items (desktop only) */}
            {variant !== "minimal" && i < items.length - 1 && columns > 1 && (
              <div class={cn(
                "absolute right-0 top-1/2 hidden h-12 w-[1px] -translate-y-1/2 bg-border",
                columns === 2 && "md:block odd:last:hidden",
                columns === 3 && "lg:block lg:[&:nth-child(3n)]:hidden",
                columns === 4 && "lg:block lg:[&:nth-child(4n)]:hidden"
              )} />
            )}
          </div>
        ))}
      </div>

      {variant !== "minimal" && (
        <DashedLine
          orientation="horizontal"
          className="scale-x-105"
        />
      )}
    </div>
  </div>
</section>
