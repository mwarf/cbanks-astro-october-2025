---
import { cn } from "@/lib/utils";

interface Stat {
  value: string;
  label: string;
  description?: string;
}

interface Props {
  title?: string;
  stats: Stat[];
  className?: string;
}

const {
  title,
  stats,
  className,
} = Astro.props;
---

<section class={cn("py-28 lg:py-32", className)}>
  <div class="container">
    {title && (
      <h2 class="text-center text-3xl tracking-tight text-balance sm:text-4xl md:text-5xl mb-12">
        {title}
      </h2>
    )}

    <div class="grid gap-8 md:grid-cols-3 lg:grid-cols-4">
      {stats.map((stat) => (
        <div class="flex flex-col items-center text-center rounded-xl border bg-card p-8 shadow-sm">
          <div class="text-primary text-5xl font-bold md:text-6xl">
            {stat.value}
          </div>
          <div class="mt-3 text-lg font-semibold">
            {stat.label}
          </div>
          {stat.description && (
            <p class="text-muted-foreground mt-2 text-sm">
              {stat.description}
            </p>
          )}
        </div>
      ))}
    </div>
  </div>
</section>
