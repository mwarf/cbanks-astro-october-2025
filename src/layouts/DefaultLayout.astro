---
import BaseHead from '@/components/BaseHead.astro';
import { Footer } from '@/components/blocks/footer';
import Navbar from '@/components/blocks/Navbar.astro';

import Breadcrumbs from '@/components/Breadcrumbs.astro';

const { title, description } = Astro.props;
---

<html lang="en">
    <head>		
        <BaseHead title={title} description={description}  />
    </head>
    <body>
        <Navbar pathname={Astro.url.pathname} />
        <main>

{
  Astro.url.pathname.split('/').filter(Boolean).length > 1 && !Astro.url.pathname.startsWith('/blog') && (
    <div class="container mx-auto max-w-5xl px-4 pt-28 lg:pt-36 pb-4">
      <Breadcrumbs />
    </div>
  )
}
          <slot />
        </main>
        <Footer />
    </body>
</html>
