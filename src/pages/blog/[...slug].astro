---
import { type CollectionEntry, getCollection } from 'astro:content';
import { render } from 'astro:content';

import BlogPost from '@/components/blocks/BlogPost.astro';
import DefaultLayout from '@/layouts/DefaultLayout.astro';
import { extractHeadings } from '@/lib/extract-headings';

export async function getStaticPaths() {
	const posts = await getCollection('blog');
	return posts.map((post) => ({
		params: { slug: post.id },
		props: post,
	}));
}
type Props = CollectionEntry<'blog'>;

const post = Astro.props;
const { title, description, pubDate, updatedDate, heroImage } = post.data;
const { Content } = await render(post);

const headings = extractHeadings(post.body || "");

// Fetch related posts (3 latest posts excluding the current one)
const allPosts = await getCollection('blog');
const relatedPosts = allPosts
  .filter((p) => p.id !== post.id)
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 3);

---
<DefaultLayout>
	<div class="py-28 lg:pt-44 lg:pb-32">
		<BlogPost post={post} relatedPosts={relatedPosts} headings={headings}>
			<Content />
		</BlogPost>
	</div>
</DefaultLayout>