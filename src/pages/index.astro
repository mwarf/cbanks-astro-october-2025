---
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';

import Background from '@/components/Background.astro';
import { FAQ } from '@/components/blocks/faq';
import Hero from '@/components/blocks/Hero.astro';
import Logos from '@/components/blocks/Logos.astro';
import ResourceAllocation from '@/components/blocks/ResourceAllocation.astro';
import { ProcessSection } from '@/components/blocks/process-section';
import { Testimonials } from '@/components/blocks/testimonials';
import DefaultLayout from '@/layouts/DefaultLayout.astro';

import heroImage from '@/assets/images/home/hero-main.png';


---

<DefaultLayout title={SITE_TITLE} description={SITE_DESCRIPTION} >
  <Background className="via-muted to-muted/80">
    <Hero image={heroImage} />
    <Logos />
    <ResourceAllocation />
    <ProcessSection />
  </Background>
  <Testimonials client:visible/>
  <Background variant="bottom">
    <FAQ client:visible/>
  </Background>
</DefaultLayout>